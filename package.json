{
	"name": "@william-owen/motoko",
	"version": "0.2.1",
	"description": "A modern React Component Library",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.js",
			"require": "./dist/utils/index.cjs"
		},
		"./styles.css": "./dist/styles.css"
	},
	"files": [
		"dist"
	],
	"sideEffects": [
		"*.css"
	],
	"scripts": {
		"build": "tsup",
		"dev": "concurrently \"pnpm run build:watch\" \"pnpm run storybook\"  \"pnpm run test\"",
		"build:watch": "tsup --watch",
		"biome:lint": "biome lint src/",
		"biome:lint:fix": "biome lint --write src/",
		"biome:format": "biome format src/",
		"biome:format:fix": "biome format --write src/",
		"biome:check": "biome check src/",
		"biome:check:fix": "biome check --write src/",
		"type-check": "tsc --noEmit",
		"test": "vitest --run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --run --coverage",
		"test:coverage:watch": "vitest --coverage",
		"test:coverage:serve": "npx http-server coverage -p 8000 -o",
		"test:run": "vitest run",
		"knip": "knip",
		"storybook": "storybook dev -p 6006 --no-open",
		"storybook:build": "storybook build",
		"build-storybook": "storybook build",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish",
		"preflight": "pnpm run biome:lint && pnpm run test:coverage && pnpm run test && pnpm run knip"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"keywords": [
		"react",
		"typescript",
		"component-library"
	],
	"author": "William Owen (wo.dev)",
	"license": "MIT",
	"packageManager": "pnpm@10.12.4",
	"dependencies": {
		"dayjs": "^1.11.13",
		"marked": "^16.1.2",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@changesets/cli": "^2.29.5",
		"@fontsource/roboto": "^5.2.6",
		"@storybook/addon-a11y": "^9.1.1",
		"@storybook/addon-docs": "^9.1.1",
		"@storybook/addon-links": "^9.1.1",
		"@storybook/react": "^9.1.1",
		"@storybook/react-vite": "^9.1.1",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.2.0",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^4.7.0",
		"@vitest/browser": "3.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "^3.2.4",
		"concurrently": "^9.2.0",
		"dayjs": "^1.11.13",
		"jsdom": "^26.1.0",
		"knip": "^5.62.0",
		"lefthook": "^1.12.2",
		"lightningcss": "^1.30.1",
		"storybook": "^9.1.1",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
